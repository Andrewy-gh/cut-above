{
  "name": "cut-above-workspace",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --if-present dev",
    "lint": "pnpm -r --if-present lint",
    "prepare": "husky",
    "typecheck": "pnpm -r --if-present typecheck",
    "test": "pnpm -r --if-present test",
    "test:run": "pnpm -r --if-present test:run",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "server/src/**/*.{ts,tsx}": [
      "pnpm -C server exec eslint --fix --report-unused-disable-directives --max-warnings 0 --ext ts,tsx",
      "pnpm exec prettier --write"
    ],
    "client/src/**/*.{ts,tsx,js,jsx}": [
      "pnpm -C client exec eslint --fix --report-unused-disable-directives --max-warnings 0 --ext ts,tsx"
    ],
    "*.{md,json,yml,yaml}": [
      "pnpm exec prettier --write"
    ]
  }
}
